= banner_and_header_for(@page_type)

%br

- if @page_type
  = render :partial => 'pages/list', :locals => {:pages => @pages}
- else
  - panel_for @page_types, {:wrapper => "dg_sidebar"} do
    = dynamic_widgets @preferred, {:namespace => "dg_sidebar"}
  = dynamic_widgets @preferred
  = pagination_links_for_widgets(@page_types) if @page_types

- content_for :right_sidebar do
  = link_to(image_tag("add_data_blue.png", :plugin => "digitalgazette", :width => 225, :height => 48, :alt => "Add Data"), "/pages/new",  :style => "display: block; text-align: center; margin-left: -10px", :id => "givenow")
  = box_for :most_viewed
  = box_for :recent
