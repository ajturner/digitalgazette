<style>#maker_map_<%= @map_id %> {width: 100%; height: 500px;}</style>

<% if @map.nil? %>
  <strong>No map found - please search to find what you are looking for.</strong>
<%- else -%>
<h2><%# @map["title"] %></h2>
<div class="geocommons_map" id="maker_map_<%= @map_id %>" style="height: 100%;"></div><br/>
 <script type="text/javascript" charset="utf-8" src="http://maker.digitalgazette.org/javascripts/embed.js"></script>
<script type="text/javascript" charset="utf-8">
  Maker.maker_host='http://maker.digitalgazette.org';Maker.finder_host='http://finder.digitalgazette.org';Maker.core_host='http://core.digitalgazette.org';
  Maker.load_map("maker_map_<%= @map_id %>", "<%= @map_id %>");
</script>


<p><%= @map["description"] %></p>

<%- end -%>
