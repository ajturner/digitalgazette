<div class="pageTitle ">
  <h2>Welcome to the Maps Library</h2>
</div>
<%- @maps.each do |map| -%>
<div class="group_entry">
  <div class="listing_icon"><%= image_tag("map.jpg", :plugin => "digitalgazette", :width => "70px") %></div>
  <div class="listing_info">
    <%= link_to(map["title"], map_path(map["pk"])) %>
    <p><%= map["description"] %></p>
  </div>
  <div class="listing_data">
    <p>
      Built by <%= map["user_login"] %> on <%= map["created_at"] %>
    </p>
  </div>
</div>
<%- end -%>

<%- content_for :right_sidebar do -%>

    <div id="whatMenu" class="span-6 last txtAlignCenter">
        <a href="/pages/new" style="display: block; text-align: center;" id="givenow">
          <%= image_tag("add_data_blue.png", :plugin => "digitalgazette", :width => 225, :height => 48, :alt => "Add Data") %>
        </a>
        <ul id="whatLinkList">
        <li id="topLi">
          <a href="/maps">MAPS OVERVIEW</a>
        </li>
        <li>
          <a href="/maps/new">VIEW EXISTING MAPS</a>
        </li>
        <li>
          <a href="/maps/new">BUILD A MAP BY LOCATION</a>
        </li>
        <li id="btmLi">
          <a href="/maps/new">BUILD A MAP BY TOPIC</a>
        </li>
        </ul>
    </div><!--#whatMenu//-->

<%- end -%>

