    <div id="whatMenu" class="span-6 last txtAlignCenter">
        <a href="/pages/new" style="display: block; text-align: center;" id="givenow">
          <%= image_tag("add_data_blue.png", :plugin => "digitalgazette", :width => 225, :height => 48, :alt => "Add Data") %>
        </a>
        <ul id="whatLinkList">
        <li id="topLi">
          <a href="/maps/all">VIEW EXISTING MAPS</a>
        </li>
        <li>
          <a href="/maps/new">BUILD A MAP BY LOCATION (TODO!)</a>
        </li>
        <li id="btmLi">
          <a href="/maps/new">BUILD A MAP BY TOPIC (TODO!)</a>
        </li>
        </ul>
    </div><!--#whatMenu//-->

<%- end -%>

